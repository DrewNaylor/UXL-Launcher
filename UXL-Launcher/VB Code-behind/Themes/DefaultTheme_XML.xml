<UXL_Launcher_Theme>
  <Title>Default Theme</Title>
  <Description>Default is the theme UXL Launcher ships with.</Description>
  <Author>Drew Naylor</Author>
  
    <Theme_Colors>
      
      <Button>
        <BackColor>Transparent</BackColor>
        <ForeColor>ControlText</ForeColor>
      </Button>
      
      <GroupBox>
        <BackColor>Transparent</BackColor>
        <ForeColor>ControlText</ForeColor>
      </GroupBox>

      <FlowLayoutPanel>
        <BackColor>Window</BackColor>
        <ForeColor>ControlText</ForeColor>
      </FlowLayoutPanel>

      <MenuBar>
        <!--The MenuBar BackColor variable is here because of problems with the custom ProfessionalRenderer.
        The BackColor value of MenuItem overrides the BackColor value of MenuBar.-->
        <!--<BackColor>Control</BackColor>-->
      </MenuBar>
      
      <StatusBar>
        <BackColor>Control</BackColor>
      </StatusBar>

      <Label>
        <BackColor>Transparent</BackColor>
        <ForeColor>ControlText</ForeColor>
      </Label>

      <TextBox>
        <BackColor>Window</BackColor>
        <ForeColor>WindowText</ForeColor>
      </TextBox>

      <MenuItem>
        <BackColor>Window</BackColor>
        <ForeColor>ControlText</ForeColor>
      </MenuItem>

      <StatusLabel>
        <BackColor>Transparent</BackColor>
        <ForeColor>ControlText</ForeColor>
        
        <!--Accepted BorderSides values are None and All. Other values will be set to None.-->
        <BorderSides>None</BorderSides>
        
        <!--Accepted BorderStyle values are Flat and SunkenInner. Other values will be set to Flat.-->
        <BorderStyle>Flat</BorderStyle>
      </StatusLabel>
      
    </Theme_Colors>
  
</UXL_Launcher_Theme>